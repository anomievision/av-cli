{
  "name": "anomie-cli",
  "version": "1.0.0",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./dist",
    "builder": "bun compile && bun package",
    "compile": "bun clean && bun build ./src/index.ts --compile --outfile dist/cli",
    "package": "for file in README.md LICENSE anomie.config.json; do cp $file dist; done",
    "lint": "eslint \"**/*.ts\"",
    "check": "eslint \"**/*.ts\" --fix",
    "prepare:husky": "husky install",
    "postinstall": "bun prepare:husky",
    "deps:check": "bunx taze major",
    "deps:update": "bunx taze major -w -i"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "bun-types": "latest",
    "commander": "^12.0.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "ora": "^8.0.1",
    "tasai": "^1.0.0",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --cache-location .eslintcache --fix"
    ]
  }
}
